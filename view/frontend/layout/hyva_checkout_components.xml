<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="checkout.payment.methods">
            <block name="checkout.payment.method.authnetcim" as="authnetcim" template="ParadoxLabs_AuthnetcimHyvaCheckout::checkout/hosted/form.phtml">
                <arguments>
                    <argument name="magewire" xsi:type="object">\ParadoxLabs\AuthnetcimHyvaCheckout\Magewire\Payment\Authnetcim</argument>
                    <argument name="method_code" xsi:type="string">authnetcim</argument>
                </arguments>
            </block>
        </referenceBlock>
        <referenceContainer name="before.body.end">
            <block name="script-authnetcim" template="ParadoxLabs_AuthnetcimHyvaCheckout::checkout/hosted/scripts.phtml">
                <arguments>
                    <argument name="method_code" xsi:type="string">authnetcim</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
